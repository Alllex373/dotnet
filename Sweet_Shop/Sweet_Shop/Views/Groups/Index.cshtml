@model List<Sweet_Shop.Models.Group>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Groups</h2>


@if (Model != null)

{
    <table>
        <tr>
            <th>Название</th>
        </tr>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>@Html.ActionLink("Редактировать", "Update", routeValues: new { id = group.Id })</td>
                <td><a href=" ">Удалить</a></td>
            </tr>
        }
    </table>
}

@Html.ActionLink("Добавить", "Add", "Groups")

