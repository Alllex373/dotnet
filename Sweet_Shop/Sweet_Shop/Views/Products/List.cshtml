@model List<Sweet_Shop.Models.Product>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Продукты</h2>

@if (Model != null)
{
    <table>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Цена</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.groupId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@Html.ActionLink("Редактировать", "Update", routeValues: new { id = product.Id })</td>
                <td><a href=" ">Удалить</a></td>
            </tr>
        }


    </table>
}
@Html.ActionLink("Добавить", "Add", "Products")

